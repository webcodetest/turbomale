            <a href="#" class="cc-tabs__tab-headers__header" aria-selected="false"
               aria-controls="product-tab-panel7_{{ tabId }}" data-cc-toggle-panel="7_{{ tabId }}">
              {{ tab7_title }}
            </a>
          </li>
        {%- endif -%}

        {%- if tab8_title != blank and tab8_content != blank -%}

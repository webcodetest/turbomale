<style>
    .custom-faq-page {
  padding: 60px 0;
}

@media screen and (max-width: 768px) {
  .custom-faq-page {
    padding: 27px 0 30px;
  }
}

.custom-faq-page-title {
  display: flex;
  margin-bottom: 32px;
  width: 100%;
  position: relative;
  flex-direction: column;
  align-items: center;
  gap: 11px;
}

@media screen and (max-width: 768px) {
  .custom-faq-page-title {
    margin-bottom: 23px;
  }
}

.custom-faq-page-title div {
  position: absolute;
  width: 100%;
  top: -70px;
  left: 50%;
  transform: translateX(-50%);
  -webkit-text-stroke-color: #c6c6c6;
  -webkit-text-stroke-width: 1px;
  font-family: Proxima Nova;
  font-size: 100px;
  font-style: normal;
  font-weight: 600;
  line-height: normal;
  text-transform: uppercase;
  color: transparent;
  text-align: center;
}

@media screen and (max-width: 768px) {
  .custom-faq-page-title div {
    font-size: 35px;
    top: -20px;
    left: 50%;
  }
}

.custom-faq-page-title h2 {
  color: #05060B;
  font-family: "Proxima Nova";
  font-size: 35px;
  font-style: normal;
  font-weight: 900;
  line-height: normal;
  text-transform: uppercase;
  position: relative;
  z-index: 1;
}

@media screen and (max-width: 768px) {
  .custom-faq-page-title h2 {
    font-size: 25px;
  }
}

.custom-faq-page-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
  margin-bottom: 38px;
}

.custom-faq-page-list-item {
  max-width: 980px;
  border-radius: 12px;
  box-shadow: 0px 0px 18.6px 0px rgba(0, 0, 0, 0.07);
  padding: 16px 22px;
  cursor: pointer;
  transition: border-color 0.3s ease;
}

.custom-faq-page-list-item.active {
  border: 1px solid #40ae00;
}

.custom-faq-page-list-item-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20px;
}

.custom-faq-page-list-item-top h3 {
  width: 100%;
  color: #05060B;
  font-family: "Proxima Nova";
  font-size: 16px;
  font-weight: 400;
  line-height: normal;
  transition: color 0.3s ease;
}

.custom-faq-page-list-item.active .custom-faq-page-list-item-top h3 {
  color: #40ae00;
}

.custom-faq-page-list-item-top svg {
  width: 100%;
  max-width: 26px;
  height: 26px;
  fill: #05060B;
  transition: transform 0.3s ease, fill 0.3s ease;
}

.custom-faq-page-list-item.active .custom-faq-page-list-item-top svg {
  fill: #40ae00;
  transform: rotate(180deg);
}

.custom-faq-page-list-item p {
  color: #05060B;
  font-family: "Proxima Nova";
  font-size: 16px;
  font-weight: 400;
  line-height: normal;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease, opacity 0.3s ease, margin-top 0.3s ease;
  opacity: 0;
  margin-top: 0;
}

.custom-faq-page-list-item.active p {
  max-height: 200px;
  opacity: 1;
  margin-top: 12px;
}

.custom-faq-page-search {
    display: flex;
    align-items: center;
    max-width: 660px;
    height: 58px;
    padding: 20px 28px;
    border-radius: 12px;
    background: #FFF;
    box-shadow: 0px 0px 18.6px 0px rgba(0, 0, 0, 0.07);
    margin: 0 auto;
    margin-bottom: 37px;
    position: relative;
}

.custom-faq-page-search input {
    height: 58px;
    width: 100%;
    outline: none;
    border: none;
    box-shadow: none;
    color: #727272;
    font-family: "Proxima Nova";
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}
.custom-faq-page-search svg {
    position: absolute;
    top: 50%;
    right: 36px;
    transform: translateY(-50%);
    width: 14px;
    height: 14px;
}

.custom-faq-page-bottom {
    margin: 0 auto;
    color: #05060B;
    text-align: center;
    font-family: "Proxima Nova";
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}

.custom-faq-page-bottom a {
    color: #05060B;
    text-align: center;
    font-family: "Proxima Nova";
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-decoration-line: underline;
}
</style>


    <div class='container'>
        <div class='custom-faq-page-title'>
            <div>{{ section.settings.title_absolute }}</div>
            <h2>{{ section.settings.title }}</h2>
        </div>
        <div class='custom-faq-page-search'>
            <input type="text" id="search" name="search" placeholder="Type your question here" required>

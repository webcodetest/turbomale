<script>
document.addEventListener('DOMContentLoaded', () => {
  const rects = document.querySelectorAll('rect');
  const popups = document.querySelectorAll('.custom-package-left-popap');

  rects.forEach(rect => {
    rect.addEventListener('mouseenter', () => {
      popups.forEach(popup => popup.classList.remove('active'));

      const rectClass = rect.classList[0];
      const targetPopup = document.querySelector(`.custom-package-left-popap.${rectClass}`);
      if (targetPopup) {
        targetPopup.classList.add('active');
      }
    });

    rect.addEventListener('mouseleave', () => {
      const rectClass = rect.classList[0];
      const targetPopup = document.querySelector(`.custom-package-left-popap.${rectClass}`);
      if (targetPopup) {
        targetPopup.classList.remove('active');
      }
    });

    const targetPopup = document.querySelector(`.custom-package-left-popap.${rect.classList[0]}`);
    if (targetPopup) {
      targetPopup.addEventListener('mouseenter', () => {
        targetPopup.classList.add('active');
      });

      targetPopup.addEventListener('mouseleave', () => {
        targetPopup.classList.remove('active');
      });
    }
  });
});

</script>

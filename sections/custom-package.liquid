                            <button class="quantity__button" name="minus" type="button">
                                <span class="visually-hidden">
                                {{- 'products.product.quantity.decrease' | t: product: package_product.title | escape -}}
                                </span>
                                <span class="svg-wrapper">{{ 'icon-minus.svg' | inline_asset_content }}</span>
                            </button>
                            <input
                                class="quantity__input"
                                data-quantity-variant-id="{{ package_product.selected_or_first_available_variant.id }}"
                                type="number"
                                name="quantity"
                                {% # theme-check-disable %}
                                value="1"
                                data-cart-quantity="{{ cart | item_count_for_variant: package_product.selected_or_first_available_variant.id }}"
                                min="1"
                                data-min="{{ package_product.quantity_rule.min }}"
                                {% if package_product.quantity_rule.max != null %}
                                max="{{ package_product.quantity_rule.max }}"
                                {% endif %}
                                step="{{ package_product.quantity_rule.increment }}"
                                {% # theme-check-enable %}
                                aria-label="{{ 'products.product.quantity.input_label' | t: product: package_product.title | escape }}"
                                id="Quantity-{{ package_product.selected_or_first_available_variant.id }}"
                                data-index="{{ package_product.selected_or_first_available_variant.id }}"
                            >
                            <button class="quantity__button" name="plus" type="button">
                                <span class="visually-hidden">
                                {{- 'products.product.quantity.increase' | t: product: package_product.title | escape -}}
                                </span>
                                <span class="svg-wrapper">{{ 'icon-plus.svg' | inline_asset_content }}</span>
                            </button>
                            {%- render 'progress-bar' -%}
                        </quantity-input>
                        <div class="product-form__buttons">
                        {%- liquid
                            assign check_against_inventory = true
                            if package_product.selected_or_first_available_variant.inventory_management != 'shopify' or package_product.selected_or_first_available_variant.inventory_policy == 'continue'
                            assign check_against_inventory = false
                            endif
                            if package_product.selected_or_first_available_variant.quantity_rule.min > package_product.selected_or_first_available_variant.inventory_quantity and check_against_inventory
                            assign quantity_rule_soldout = true
                            endif
                        -%}
                        <button
                            style="display: none;"
                            id="ProductSubmitButton-{{ section_id }}"
                            type="submit"
                            name="add"

                                {{ 'products.product.unavailable' | t }}
                            {%- elsif package_product.selected_or_first_available_variant.available == false or quantity_rule_soldout -%}
                                {{ 'products.product.sold_out' | t }}
                            {%- else -%}
                                {{ 'products.product.add_to_cart' | t }}
                            {%- endif -%}
                            </span>
                            {%- render 'loading-spinner' -%}
                        </button>
                        </div>
                    {%- endform -%}

                        <script type="application/ld+json">
      {{ package_product | structured_data }}

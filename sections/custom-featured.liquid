{% schema %}
  {
    "name": "Custom Featured",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "title_absolute",
        "label": "Title Absolute"
      },
    ],
    "blocks": [
    {
      "type": "slider",
      "name": "Slider",
      "settings": [
        {
          "type": "image_picker",
          "id": "slider_image",
          "label": "Slider image"
        },
        {
          "type": "text",
          "id": "slider_image_alt",
          "label": "Slider image alt"
        },
      ]
    },
  ],
     "presets": [
    {
      "name": "Custom Featured"
    }
  ]
  }
{% endschema %}
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>
<section class='custom-featured'>
    <div class='custom-featured-line'>
    </div>
    <div class='custom-featured-line'>
    </div>
    <div class='custom-featured-line'>
    </div>
    <div class='custom-featured-line'>
    </div>
    <div class='custom-featured-title'>
        <div>{{ section.settings.title_absolute }}</div>
        <h2>{{ section.settings.title }}</h2>
    </div>
     <div class="custom-featured-slider swiper">
        <div class="swiper-wrapper">
            {% for block in section.blocks %}
                {% if block.type == 'slider' %}
                    <div class="swiper-slide">
                        <img src='{{ block.settings.slider_image | img_url: 'master' }}' alt='{{ block.settings.slider_image_alt }}'>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
    </div>
</section>
